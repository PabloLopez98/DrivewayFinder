<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:scrollbars="none"
    android:paddingTop="20dp"
    android:paddingLeft="26dp"
    android:paddingRight="26dp"
    android:paddingBottom="20dp"
    tools:context=".AddDate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
       >

        <ImageView
            android:padding="8dp"
            android:maxWidth="350dp"
            android:maxHeight="350dp"
            android:adjustViewBounds="true"
            android:id="@+id/drivewayImageShown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/gallery_thumb"
            android:backgroundTint="@color/colorAccent" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location_on_black_24dp"
                />

            <TextView
                android:id="@+id/drivewayLocationShown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:padding="8dp"
                android:text="Located at: "
                tools:layout_editor_absoluteX="104dp"
                tools:layout_editor_absoluteY="433dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_account_circle_24px"
            />

        <TextView
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:id="@+id/drivewayNameShown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="My Name: "
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="433dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone_android_black_24dp"
            />

        <TextView
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/drivewayPhoneNumberShown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="My Phone Number: "
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="433dp" />

    </LinearLayout>

      <!--  <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            />-->

        <CalendarView
            android:layout_marginTop="30dp"
            android:id="@+id/calendarView"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="32dp" />

     <!--   <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            />-->

        <LinearLayout
            android:layout_marginTop="30dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".10"
                android:gravity="end"
                android:textStyle="bold"
                android:padding="8dp"
                android:text="$"
                android:textColor="@android:color/background_dark" />

            <EditText
                android:id="@+id/inputRate"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                android:padding="8dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center_horizontal"
                android:hint="15"
                android:inputType="number"
                tools:layout_editor_absoluteX="103dp"
                tools:layout_editor_absoluteY="495dp" />

            <TextView
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".10"
                android:gravity="start"
                android:text="/Hr"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark" />

        </LinearLayout>

       <!-- <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            />-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:background="@drawable/rounded_edittext"
                android:padding="8dp"
                android:id="@+id/startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showTimePicker"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="00:00 AM" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text=" - " />

            <TextView
                android:background="@drawable/rounded_edittext"
                android:padding="8dp"
                android:id="@+id/endTime"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showTimePicker"
                android:text="00:00 PM" />

        </LinearLayout>

      <!--  <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            />-->

        <LinearLayout
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Divide time into "
                android:textColor="@android:color/black" />

            <EditText
                android:padding="8dp"
                android:textColor="@android:color/black"
                android:id="@+id/dividingNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:hint="60"
                android:inputType="number" />

            <TextView
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" minute intervals"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:onClick="divideTime"
            android:padding="8dp"
            android:text="Create Time"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/timeRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:listitem="@android:layout/activity_list_item" />

        <Button
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:onClick="addDate"
            android:padding="8dp"
            android:text="Finish"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>