<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:scrollbars="none"
    tools:context=".EditProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:text="Current image: "
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <ImageView
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:id="@+id/currentImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@android:drawable/gallery_thumb"
            android:backgroundTint="@color/colorAccent"
            android:maxWidth="225dp"
            android:maxHeight="225dp"
            android:onClick="openImages"
            android:padding="8dp" />

        <TextView
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:id="@+id/currentLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Current location: "
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <EditText
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:id="@+id/streetAddressEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:hint="12345 Street Ave"
            android:inputType="textPostalAddress"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="4dp" />

        <EditText
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:id="@+id/citytAddressEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:hint="City"
            android:inputType="textPostalAddress"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="4dp" />

        <EditText
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:id="@+id/stateAddressEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:hint="CA"
            android:inputType="textPostalAddress"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <Button
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_edittext"
            android:onClick="validateAddress"
            android:padding="8dp"
            android:text="Verify location"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:padding="8dp"
            android:text=" " />

        <TextView
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:id="@+id/currentVerifiedLocationShown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:padding="8dp"
            android:text="Verified location will be shown here."
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <TextView
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:id="@+id/currentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="8dp"
            android:text="Current name: "
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <EditText
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:id="@+id/fullNameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:hint="Full Name"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:id="@+id/currentPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Current Phone Number: "
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <EditText
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:id="@+id/phoneNumberInputEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:hint="(123)-456-7890"
            android:inputType="phone"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <Button
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_edittext"
            android:onClick="finish"
            android:padding="8dp"
            android:text="Finish"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>