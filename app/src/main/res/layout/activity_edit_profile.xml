<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editprofileroot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:scrollbars="none"
    tools:context=".EditProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/currentImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@drawable/login_bknd"
            android:onClick="openImages"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/currentLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="26dp"
            android:padding="8dp"
            android:text="@string/current_location"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/streetAddressEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/_12345_street_ave"
            android:inputType="textPostalAddress"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="4dp" />

        <EditText
            android:id="@+id/citytAddressEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/city"
            android:inputType="textPostalAddress"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="4dp" />

        <EditText
            android:id="@+id/stateAddressEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/ca"
            android:inputType="textPostalAddress"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="26dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/buttonshape"
            android:onClick="validateAddress"
            android:padding="8dp"
            android:text="@string/verify_location"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:padding="8dp"
            android:text="@string/space" />

        <TextView
            android:id="@+id/currentVerifiedLocationShown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/verified_location_shown_here"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/currentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="26dp"
            android:padding="8dp"
            android:text="@string/current_name"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/fullNameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/full_name"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/currentPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:padding="8dp"
            android:text="@string/current_phone_number"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/phoneNumberInputEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/_123_456_7890"
            android:inputType="phone"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonshape"
            android:onClick="finish"
            android:padding="8dp"
            android:text="@string/finish"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>