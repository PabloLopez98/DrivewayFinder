<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pablo.myexample.drivewayfindertwo.ReservationDetailsForDriver">

    <ImageView
        android:id="@+id/imageDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/locationDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location" />

    <TextView
        android:id="@+id/rateDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$15/hr" />

    <TextView
        android:id="@+id/timeDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time" />

    <TextView
        android:id="@+id/dateDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date" />

    <TextView
        android:id="@+id/ownerNameDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full name of driveway owner" />

    <TextView
        android:id="@+id/ownerPhoneDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number" />

    <Button
        android:id="@+id/cancelButtonDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="don't worry about cancelling yet" />

</LinearLayout>
