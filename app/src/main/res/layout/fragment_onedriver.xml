<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="pablo.myexample.drivewayfindertwo.TheDriverActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/colorStatusBar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edittextthree"
            android:gravity="center">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/SearchViewTheme"
                app:searchIcon="@drawable/ic_search_24px"
                app:queryHint="City or Zip Code"
                app:closeIcon="@drawable/ic_close_black_24dp"
                app:iconifiedByDefault="false"
                app:queryBackground="@android:color/transparent"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLayOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingRight="8dp"
                android:text="Under $:"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/rate"
                android:layout_marginRight="8dp"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_edittexttwo"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:theme="@style/SearchViewTheme" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingRight="8dp"
                android:text="Date:"
                android:textColor="@android:color/white"
                android:textStyle="bold"  />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded_edittexttwo"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="YYYY MM DD"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/colorStatusBar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragmentonerecyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary" />

    </LinearLayout>

