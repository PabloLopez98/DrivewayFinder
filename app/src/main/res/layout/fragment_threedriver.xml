<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context="pablo.myexample.drivewayfindertwo.threedriver">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:gravity="center_vertical|center_horizontal"
        >
        <TextView
            android:id="@+id/profileDriverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name" />

        <TextView
            android:id="@+id/profileDriverPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number" />

        <TextView
            android:id="@+id/profileDriverCarModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Model" />

        <TextView
            android:id="@+id/profileDriverLicensePlate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="License Plate" />

        <Button
            android:id="@+id/editDriverProfileButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="toEditProfileDriver"
            android:text="Edit" />

    </LinearLayout>
</FrameLayout>
